{
  "name": "tadis-analyzer",
  "version": "0.15.1",
  "description": "generic analyzer tool for architecture discovery",
  "main": "build/src/lib.js",
  "types": "build/src/lib.d.ts",
  "files": [
    "build/src"
  ],
  "license": "Apache-2.0",
  "author": "Andreas Blunk, MaibornWolff GmbH",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node build/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --runInBand",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker-build": "node docker-build.js",
    "docker-run": "node docker-run.js",
    "docker-publish": "node docker-publish.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/websockets": "^5.4.0",
    "dotenv": "^7.0.0",
    "joi": "^14.3.1",
    "kubernetes-client": "^6.11.1",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.12",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.2",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.11.3",
    "@types/request-promise-native": "^1.0.15",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.14.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
