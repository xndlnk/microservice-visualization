{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDirs": [
            "src",
            "test"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2015",
            "es2016",
            "dom",
            "dom.iterable",
            "es2015.promise"
        ],
        "types": [
            "mocha"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.js",
        "build"
    ]
}